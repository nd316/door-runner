canvasWidth = 960px
canvasHeight = 600px


background-linear-gradient(startPoint, startColor, startInterval, endColor, endInterval)//background -webkit-gradient(linear, deprecatedWebkitStartPoint, deprecatedWebkitEndPoint, color-stop(startInterval, startColor), color-stop(endInterval, endColor))
	background: startColor /* Old browsers */
	background: -moz-linear-gradient(startPoint, startColor 0%, endColor 100%) /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,startColor), color-stop(100%,endColor)) /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top, startColor 0%,endColor 100%) /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top, startColor 0%,endColor 100%) /* Opera 11.10+ */
	background: -ms-linear-gradient(top, startColor 0%,endColor 100%) /* IE10+ */
	background: linear-gradient(to bottom, startColor 0%,endColor 100%) /* W3C */

calc(prop, val, fallback) {
  if (fallback) {
   {prop}: fallback; 
  }
  {prop}: s("-webkit-calc(%s)",val);
  {prop}: s("calc(%s)", val);
}


html
	box-sizing border-box
html
body
	margin 0
	height 100%
body
	font-family 'Open Sans'
	background-color orange
*
*:after
*:before
	box-sizing inherit
.cfix:after
	content ""
	display table
	clear both

.nano-content
	padding 8px

#main-scope
	height 100%
.page
	height 100%
	position relative

.align-v-translate	
	position relative
	top 50%
	transform translateY(-50%)
.content
	padding 8px
	position relative
#page-1
	.content
		margin 0 auto
		max-width 1338px 
.live-table-wraper
	float right
	height 100%
	height canvasHeight
	calc('width', s("100% - %s", (canvasWidth + 15px)), 100%)

.score-table
	&.live
		width 100%
		height 100%
		//background-color white
		//padding 10px
		font-size 13px

.score-table__row
	height 70px
	border-radius 9px
	border 2px solid #164266
	margin 10px 0
	overflow hidden
	background-color white
	box-shadow inset 0px 0px 23px -2px rgba(0,0,0,0.26), 0px 0px 12px 1px rgba(0,0,0,0.54)
	&.me
		margin 15px 0
		height 95px
		border-radius 13px
		background-linear-gradient(top, #D1FF97, 0%, #C8FF83, 100%)
		box-shadow inset 0px 0px 23px -2px rgba(0,0,0,0.5), 0px 0px 12px 1px rgba(0,0,0,0.54)
		.score-table__data--name
			font-weight bold
			font-size 14px
		.score-table__data--platz
			font-size 25px
			width 20%
		.score-table__data--score
			width 25%
.score-table__data
	float left
	height 100%
	padding 5px
	border-right 1px solid #ddd
	display flex
	align-items center
	justify-content center
	&:last-child
		border-right none
	span
		text-overflow ellipsis
		white-space nowrap
		overflow hidden
.score-table__data--platz
	width 15%
	background-linear-gradient(top, #42ABFF, 0%, #2F95E9, 100%)
	color white
	font-weight bold
	font-size 17px
.score-table__data--name
	width 40%
	color #464646
	//background-linear-gradient(top, #EBF132, 0%, #F3FA28, 100%)
.score-table__data--score
	width 30%
	font-weight bold
	font-size 15px
.score-table__data--land
	width 15%






